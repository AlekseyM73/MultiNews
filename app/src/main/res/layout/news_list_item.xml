<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newsListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/newsListCardView"
        android:layout_gravity="center"
        android:layout_height="120dp"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        card_view:cardElevation="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newsListItemTVSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="site"
                android:layout_alignParentLeft="true">
            </TextView>

            <TextView
                android:id="@+id/newsListItemTVTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/newsListItemTVSite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/newsListItemTVDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/newsListItemTVTitle"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/newsListItemTVPublAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published at"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                />

            <ImageView
                android:id="@+id/newsListImageView"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                >

            </ImageView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>